# Domain Monitor Configuration
# Copy this file to .env and update the values

# =============================================================================
# REQUIRED
# =============================================================================

# APILayer WHOIS API key
# Get your key at: https://apilayer.com/marketplace/whois-api
APILAYER_KEY=your_api_key_here

# =============================================================================
# SERVER
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Environment (development or production)
NODE_ENV=development

# Database file path (default: ./domains.db)
# DB_PATH=./domains.db

# =============================================================================
# AUTHENTICATION (Optional)
# =============================================================================

# Enable authentication (true/false)
AUTH_ENABLED=false

# Admin credentials (required if AUTH_ENABLED=true)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# Session secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# Required in production
SESSION_SECRET=change-this-in-production

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================

# SMTP server settings
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Sender address
SMTP_FROM=Domain Monitor <noreply@example.com>

# =============================================================================
# SECURITY (Strongly recommended for production)
# =============================================================================

# Encryption key for API keys stored in database.
# Without this, API keys use weaker fallback encryption based on SESSION_SECRET.
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# =============================================================================
# LOGGING (Optional)
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable file logging (true/false)
LOG_TO_FILE=false

# Log directory (default: ./logs)
LOG_DIR=./logs

# =============================================================================
# HEALTH CHECKS (Optional)
# =============================================================================

# Enable domain health checks (true/false)
HEALTH_CHECK_ENABLED=true

# Health check interval in hours (default: 24)
HEALTH_CHECK_INTERVAL_HOURS=24
